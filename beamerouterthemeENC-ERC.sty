%%% TITLE PAGE %%%
\setbeamertemplate{title page}
{
  \setbeamerfont{title}{size=\Huge}
  \usebeamerfont{title}\usebeamercolor[ENCGray]{title}\inserttitle\par

  \setbeamerfont{subtitle}{size=\Large}
  \usebeamerfont{subtitle}\usebeamercolor[ENCRed]{subtitle}\insertsubtitle\par
  \bigskip

  \setbeamerfont{author}{size=\Large}
  \usebeamerfont{author}\insertauthor\par
  \bigskip

  \setbeamerfont{institute}{size=\small}
  \usebeamerfont{institute}\insertinstitute\par

  \setbeamerfont{date}{size=\small}
  \usebeamerfont{date}\insertdate\par
  %\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
}


%%% TITLE FRAME MANAGEMENT %%%
\setbeamercolor{structure}{fg=red}
\setbeamertemplate{frametitle}
{
   \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
    \begin{beamercolorbox}[sep=0.1cm,wd=\textwidth]{framecolor}
        \usebeamerfont{frametitle}\usebeamercolor[ENCRed]{title}%
        \vskip-1ex
        \hspace{.2em}\insertframetitle \\
        \vspace{-.8em}\vrule width.8\paperwidth height1pt depth0ex%
    \end{beamercolorbox}%
}


%%% TABLE OF CONTENTS MANAGEMENT %%%%
\setbeamertemplate{section in toc}
{%
    \leavevmode\leftskip=6ex%
  \llap{%
    \usebeamerfont*{section number projected}%
    \usebeamercolor[fg]{section number projected}%
    \vrule width2.25ex height1.85ex depth.4ex%
    \hskip-2.25ex%
    \hbox to2.25ex{\hfil\color{ENCRed}\Large\inserttocsectionnumber.\hfil}}%
  \kern1.25ex\hbox{\Large\inserttocsection}
    
}
\setbeamercolor{section in toc}{fg=ENCRed}

\setbeamertemplate{subsection in toc}
{
    \leavevmode\leftskip=10ex%
  \llap{%
    \usebeamerfont*{subsection number projected}%
    \usebeamercolor[fg]{subsection number projected}%
    \vrule width2.25ex height1.85ex depth.4ex%
    \hskip-2.25ex%
    \hbox to2.25ex{\inserttocsubsectionnumber)\hfil}}%
    \kern1.25ex\hbox{\inserttocsubsection}\par
}
\setbeamercolor{subsection in toc}{fg=ENCRed}

\setbeamertemplate{subsubsection in toc}
{
    \leavevmode\leftskip=17ex%
  \llap{%
    \usebeamerfont*{subsubection number projected}%
    \usebeamercolor[fg]{subsubsection number projected}%
    \vrule width2.25ex height1.85ex depth.4ex%
    \hskip-2.25ex%
    \hbox to2.25ex{\hfil\@alph\inserttocsubsubsectionnumber.\hfil}}\kern1.25ex\inserttocsubsubsection\par
}
\setbeamercolor{subsubsection in toc}{fg=ENCRed}


